{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TSConfig Web",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "declaration": true,
    "composite": true
  },
  "include": ["src/**/*", "typings/**/*", "package.json", "src/*.json"],
  "exclude": ["node_modules", "**/dist", "**/__tests__/**", "**/tests/**", "**/*.md"]
}
