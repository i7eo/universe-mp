{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TSConfig Vitest Module",
  "extends": "./tsconfig.web.json",
  "compilerOptions": {
    "types": ["node", "jsdom", "vitest/globals"],
    "composite": true
  },
  "include": [
    "**/vitest.config.*",
    "src/**/*",
    "typings/**/*",
    "**/__tests__/**/*",
    "**/tests/**/*",
    "package.json",
  ],
  "exclude": ["node_modules", "**/dist", "**/*.md"]
}
